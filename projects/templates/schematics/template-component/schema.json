{
  "$schema": "http://json-schema.org/schema",
  "$id": "template",
  "title": "WindmillCode template Component Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the component.",
      "type": "string"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the component.",
      "$default": {
        "$source": "workingDirectory"
      }
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }

    },
    "cpntType": {
      "type": "string",
      "description": "The type of component.",
      "enum": ["default", "library"],
      "default": "default"
    },
    "isParamsChild":{
      "type":"string",
      "enum": [true,false ],
      "default":false,
      "description":"determines wheter the component is present or container if its container it will get a params class as well as a @Input params"
    },
    "standalone": {
      "description": "Whether the generated component is standalone.",
      "type": "boolean",
      "default": false,
      "x-user-analytics": 15
    },
    "styleType": {
      "type": "string",
      "description": "preset scss to choose from.",
      "enum": ["type0","type1", "none"],
      "default": "type0"
    }
   },
  "required": [
    "name"
  ]
}
